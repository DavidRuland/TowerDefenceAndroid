<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/place"
    android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="se.mah.ac9511.towerd.GameScreenFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView android:layout_width="match_parent" android:layout_height="match_parent"
        android:text="@string/hello_blank_fragment" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Towers"
        android:background="@color/SkyBlue"
        android:id="@+id/buttonTower"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp"
        android:layout_below="@+id/surfaceView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Money: "
        android:textColor="@color/yellow"
        android:id="@+id/moneyTextView"
        android:layout_alignTop="@+id/buttonTower"
        android:layout_alignLeft="@+id/playerTextView"
        android:layout_alignStart="@+id/playerTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="State: "
        android:textColor="@color/red"
        android:id="@+id/enemyKilledTextView"
        android:layout_below="@+id/moneyTextView"
        android:layout_alignLeft="@+id/moneyTextView"
        android:layout_alignStart="@+id/moneyTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Player: "
        android:textColor="@color/green"
        android:id="@+id/playerTextView"
        android:layout_above="@+id/moneyTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="99dp"
        android:layout_marginEnd="99dp" />

    <SurfaceView
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:id="@+id/surfaceView"
        android:background="@color/white"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
